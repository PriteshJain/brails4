.col-md-4.col-md-offset-4
  .custom-wrapper
    .login-body
      %h2 Sign In
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        = f.input :email, autofocus: true, label: false, input_html: {data: {'rule-email' => true, 'rule-required' => true}, class: 'form-control'}, placeholder: 'Email Address'
        = f.input :password, label: false, input_html: {data: {'rule-required' => true}, class: 'form-control'}, placeholder: 'Password'
        .submit
          - if devise_mapping.rememberable?
            .remember
              = f.check_box :remember_me, data: {color: 'blue', skin: 'square'}
              %label{:for => 'remember'} Remember me
          = f.button :submit, 'Sign me in', class: 'btn btn-primary btn-block'
      .forget
        = render "devise/shared/links"