.span4.offset4
  .custom-wrapper
    .login-body
      %h2 SIGN IN
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-validate'}) do |f|
        = f.input :email, autofocus: true, label: false, input_html: {data: {'rule-email' => true, 'rule-required' => true}, class: 'input-block-level'}, placeholder: 'Email Address'
        = f.input :password, label: false, input_html: {data: {'rule-required' => true}, class: 'input-block-level'}, placeholder: 'Password'
        .submit
          - if devise_mapping.rememberable?
            .remember
              = f.check_box :remember_me, class: 'icheck-me', data: {color: 'blue', skin: 'square'}
              %label{:for => 'remember'} Remember me
            .pull-right
              = f.button :submit, 'Sign me in', class: 'btn btn-primary'
      .forget
        = render "devise/shared/links"
