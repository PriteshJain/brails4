- model_class = Level
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:seq_number)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @levels.each do |level|
      %tr
        %td= link_to level.id, level_path(level)
        %td= level.seq_number
        %td= level.name
        %td= level.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_level_path(level), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), level_path(level), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_level_path, :class => 'btn btn-primary'
