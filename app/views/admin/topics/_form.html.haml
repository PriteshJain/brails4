= form_for [:admin, @topic], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :seq_number, :class => 'control-label'
    .controls
      = f.text_field :seq_number, :class => 'text_field'
  .control-group
    = f.label :level_id, :class => 'control-label'
    .controls
      = f.text_field :level_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_topic_path, :class => 'btn'
