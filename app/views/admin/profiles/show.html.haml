- model_class = Profile
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @profile.name
%p
  %strong= model_class.human_attribute_name(:birthdate) + ':'
  %br
  = @profile.birthdate
%p
  %strong= model_class.human_attribute_name(:gender) + ':'
  %br
  = @profile.gender
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @profile.address
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @profile.country
%p
  %strong= model_class.human_attribute_name(:total_points) + ':'
  %br
  = @profile.total_points
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @profile.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_profile_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_profile_path(@profile), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_profile_path(@profile), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
