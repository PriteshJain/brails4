- model_class = Profile
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:birthdate)
      %th= model_class.human_attribute_name(:gender)
      %th= model_class.human_attribute_name(:address)
      %th= model_class.human_attribute_name(:country)
      %th= model_class.human_attribute_name(:total_points)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.id, admin_profile_path(profile)
        %td= profile.name
        %td= profile.birthdate
        %td= profile.gender
        %td= profile.address
        %td= profile.country
        %td= profile.total_points
        %td= profile.user_id
        %td=l profile.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_profile_path(profile), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_profile_path(profile), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_profile_path, :class => 'btn btn-primary'
