- model_class = Feedback
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @feedback.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @feedback.email
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @feedback.country
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @feedback.text

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), feedback_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_feedback_path(@feedback), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), feedback_path(@feedback), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
