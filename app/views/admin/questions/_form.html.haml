= form_for @question, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :difficulty, :class => 'control-label'
    .controls
      = f.text_field :difficulty, :class => 'text_field'
  .control-group
    = f.label :questionable_type, :class => 'control-label'
    .controls
      = f.text_field :questionable_type, :class => 'text_field'
  .control-group
    = f.label :questionable_id, :class => 'control-label'
    .controls
      = f.text_field :questionable_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), question_path, :class => 'btn'
