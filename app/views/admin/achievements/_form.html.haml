= form_for @achievement, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :score, :class => 'control-label'
    .controls
      = f.text_field :score, :class => 'text_field'
  .control-group
    = f.label :topic_id, :class => 'control-label'
    .controls
      = f.text_field :topic_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), achievements_path, :class => 'btn'
